<div class="mt-4">
    <h3>Cập nhật khóa học</h3>
    <form class="mt-4" method="POST" action="/course/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description">{{course.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoid">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoid" name="videoId">
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>